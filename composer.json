{
    "name": "Daamian/HttpClient",
    "type": "library",
    "description": "HttpClient",
    "keywords": [
        "Daamian",
        "HttpClient"
    ],
    "homepage": "https://github.com/Daamian/HttpClient",
    "license": "MIT",
    "authors": [
        {
            "name": "Damian",
            "email": "kusek.damian@gmail.com",
            "homepage": "https://github.com/Daamian",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.4"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Daamian\\HttpClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Daamian\\HttpClient\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
